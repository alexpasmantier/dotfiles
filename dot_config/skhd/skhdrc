# [[ YABAI SETTINGS ]]
# CHANGING WINDOW FOCUS
# change window focus within space
shift + alt - j : yabai -m window --focus south
shift + alt - k : yabai -m window --focus north
shift + alt - h : yabai -m window --focus west
shift + alt - l : yabai -m window --focus east
# change focus between external displays (left and right)
# shift + alt - 9 : yabai -m display --focus west
# shift + alt - 0 : yabai -m display --focus east

# MODIFYING THE LAYOUT
# rotate layout clockwise
shift + alt - space : yabai -m space --rotate 270
# toggle window float
shift + alt - y : yabai -m window --toggle float --grid 4:4:1:1:2:2

# MODIFYING WINDOW SIZE
# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen
# rebalance layout
shift + alt - b : yabai -m space --balance

# MOVING WINDOWS AROUND
shift + alt - left : yabai -m window --space prev
shift + alt - right : yabai -m window --space next
# move window to space n
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6
shift + alt - 7 : yabai -m window --space 7

# STARTING AND STOPPING YABAI
shift + alt - q : yabai --stop-service
shift + alt - s : yabai --start-service

